<%- include('../partials/admin/admin_header.ejs') %>

<main>
  <section class="content-main mt-80 mb-80">
    <div class="card mx-auto card-login">
      <div class="card-body d-flex flex-column align-items-center">
        <div
          class="logo-heading w-100 d-flex flex-column justify-content-center align-items-center"
        >
          <img
            src="/user_assets/imgs/theme/watchcompany_logo.svg"
            alt="logo"
            style="width: 90px"
          />
        </div>
        <br />
        <h4 class="card-title mb-4">Admin Login</h4>
        <form method="post">
          <div class="mb-3">
            <input
              class="form-control"
              placeholder="Username or email"
              type="text"
              name="email"
            />
          </div>
          <div class="mb-3">
            <input
              class="form-control"
              placeholder="Password"
              type="password"
              name="password"
            />
          </div>
          <div class="mb-4">
            <button type="submit" class="btn btn-primary w-100">Login</button>
          </div>
        </form>
        <% if (message) { %>
        <p class="text-danger"><%= message %></p>
        <% } %>
      </div>
    </div>
  </section>
</main>

<script src="admin_assets/js/vendors/jquery-3.6.0.min.js"></script>
<script src="admin_assets/js/vendors/bootstrap.bundle.min.js"></script>
<script src="admin_assets/js/vendors/jquery.fullscreen.min.js"></script>
<script src="admin_assets/js/main.js" type="text/javascript"></script>

